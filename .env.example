# MongoDB Connection String
# Get this from MongoDB Atlas: https://cloud.mongodb.com
# Format: mongodb+srv://<username>:<password>@<cluster>.mongodb.net/<database>?retryWrites=true&w=majority
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/kukreja-consultancy?retryWrites=true&w=majority

# Port for local development (optional)
PORT=5000

# API URL for frontend (use http://localhost:5000/api for local development, leave empty for production)
REACT_APP_API_URL=http://localhost:5000/api
